<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">

    <ImageView
        android:id="@+id/img_four"
        android:layout_marginTop="@dimen/dp_150"
        android:layout_centerHorizontal="true"
        android:layout_width="@dimen/dp_205"
        android:layout_height="@dimen/dp_205"
        android:src="@drawable/ydy_four"/>

    <TextView
        android:id="@+id/text_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_four"
        android:layout_marginTop="@dimen/dp_60"
        android:text="八维移动通信学院作品"
        android:textColor="#777777"
        android:textSize="@dimen/sp_14"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/text_one2"
        android:layout_below="@+id/text_one"
        android:layout_marginTop="@dimen/dp_21"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="带您开启一段美好的电影之旅"
        android:textColor="#777777"
        android:textSize="@dimen/sp_14"/>

</RelativeLayout>